<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderText">

        <item name="android:textSize">28sp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/color5</item>
        <item name="colorControlActivated">@color/color5</item>
        <item name="colorControlHighlight">@color/color5</item>
        <item name="boxStrokeColor">@color/color5</item>

    </style>

    <style name="BodyText">
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="ButtonFilled" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">24dp</item>
        <item name="textAllCaps">false</item>
        <!--        <item name="backgroundTint">#403D6C</item>-->
        <item name="backgroundTint">@color/color5</item>
    </style>
</resources>